{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    },
    {
      "src": "/api/(.*)", "dest": "/api/$1" 
    },
    {
      "src": "/(?!api)(.*)",
      "dest": "/dist/$1"
    }
  ]
}